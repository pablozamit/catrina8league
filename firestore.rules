rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para jugadores - lectura y escritura públicas
    match /players/{playerId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Reglas para grupos - lectura y escritura públicas
    match /groups/{groupId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Reglas para partidos - lectura y escritura públicas
    match /matches/{matchId} {
      allow read: if true;
      allow write: if true;
    }
  }
}